<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tosc.bookd.topactivities.WishlistActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/myCustomTheme" />

    <in.tosc.bookd.ui.AutofitRecyclerView
        android:id="@+id/wishlist_recyclerview"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="@dimen/padding_book_recyclerview"
        android:columnWidth="@dimen/column_width_book_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    </in.tosc.bookd.ui.AutofitRecyclerView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/wishlist_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_book_add"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorAccent" />

</FrameLayout>
